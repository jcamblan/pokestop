.pokemons
  .row
    .col-12.col-md-6
      .pokemons
        .pokemons__list
          h1 = @type.name
          table.table
            thead
              tr
                th scope="col"  Nom
                th scope="col"  Type(s)
                th scope="col"  Cat√©gorie
            tbody
              - @attacks.each do |a|
                tr
                  td = link_to a.name, a
                  td = link_to type_image(a.type), a.type
                  td = a.attack_category.name
    .col-12.col-md-6
      .pokemons
        .pokemons__list
          h2 = "Pokemons de type #{@type.name} :"
          = paginate @pokemons
          table.table
            thead
              tr
                th scope="col"
                th scope="col"  #
                th scope="col"  Nom
                th scope="col"  Type(s)
            tbody
              - @pokemons.each do |p|
                tr class=("pokemon_sprite--gray" unless p.generation.on_prod)
                  td = link_to display_sprite(p), pokemon_path(p.num)
                  td = link_to p.num, pokemon_path(p.num)
                  td = link_to p.name, pokemon_path(p.num)
                  td 
                    - p.types.each do |t|
                       = link_to type_image(t), t
          = paginate @pokemons