.home-article.shadow
  .home-article__title
    h3.card-title = link_to article.title, article
  .home-article__infos
    span.home-article__date = "le #{article.created_at.strftime('%d/%m/%Y')} Ã  #{article.created_at.strftime('%H:%M')} | "
    - article.tags.each do |tag|
      span.badge.badge-success.mr-1 = tag.name
  hr
  .home-article__heading
    p.card-text = sanitize article.header
  - if current_page? article_path(article)
    .home-article__body
      = sanitize article.body